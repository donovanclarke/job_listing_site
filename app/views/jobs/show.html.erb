<div class="container" id="login-page">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h1><%= @job.job_title %></h1>
      <p class="job-date-show">
        <%= @job.created_at.strftime("%b %d, %Y") %>
      </p>
      <p class="job-info">
        <%= @job.job_name %><br>
        <%= @job.job_headquarters %><br>
        <%= link_to @job.job_url %>
      </p>
      <hr>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
      <div class="col-md-6">
        <%= @job.job_description.html_safe %>
      <div class="job-apply-box">
        <%= @job.job_apply %>
      </div>


      <% if user_signed_in? && current_user.admin? %>
        <%= link_to 'Edit', edit_job_path(@job) %> |
        <%= link_to 'Back', jobs_path %>
      <% else %>
        <%= link_to 'Back', root_path %>
      <% end %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
