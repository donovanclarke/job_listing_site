<%= bootstrap_form_for(@job) do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :job_title %>
  </div>
  <div class="field">
    <%= f.radio_button :job_category, 'Design', label: 'Design' %>
    <%= f.radio_button :job_category, 'Programming', label: 'Programming' %>
    <%= f.radio_button :job_category, 'Customer Support', label: 'Customer Support' %>
    <%= f.radio_button :job_category, 'Copywriting', label: 'Copywriting' %>
    <%= f.radio_button :job_category, 'DevOps & Sysadmin', label: 'DevOps & Sysadmin' %>
    <%= f.radio_button :job_category, 'Marketing', label: 'Marketing' %>
    <%= f.radio_button :job_category, 'Business/ Exec & Management', label: 'Business/ Exec & Management' %>
    <%= f.radio_button :job_category, 'All Other', label: 'All Other' %>
  </div>
  <div class="field">
    <%= f.text_field :job_headquarters %>
  </div>
  <div class="field">
    <%= f.text_area :job_description, :class => 'ckeditor' %>
  </div>
  <div class="field">
    <%= f.text_area :job_apply %>
  </div>
  <div class="field">
    <%= f.text_field :job_name %>
  </div>
  <div class="field">
    <%= f.text_field :job_url %>
  </div>
  <div class="field">
    <%= f.text_field :job_email %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
