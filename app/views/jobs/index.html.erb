<div class="container" id="job-page">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-md-12">
      <h1>Listing Jobs</h1>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Job title</th>
            <th>Job category</th>
            <th>Job headquarters</th>
            <th>Job description</th>
            <th>Job apply</th>
            <th>Job name</th>
            <th>Job url</th>
            <th>Job email</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @jobs.each do |job| %>
          <tr>
            <td><%= job.job_title %></td>
            <td><%= job.job_category %></td>
            <td><%= job.job_headquarters %></td>
            <td><%= h truncate(job.job_description, :length => 25).html_safe %></td>
            <td><%= job.job_apply %></td>
            <td><%= job.job_name %></td>
            <td><%= job.job_url %></td>
            <td><%= job.job_email %></td>
            <% if user_signed_in? && current_user.admin? %>
              <td><%= link_to 'Show', job %></td>
              <td><%= link_to 'Edit', edit_job_path(job) %></td>
              <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Job', new_job_path %>
    </div>
  </div>
</div>
