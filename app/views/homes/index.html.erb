<div class="container" id="index-page">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <h2>Find your dream tech job</h2>
      <p>Where employers come to find their dream employees, and where employees come to find their dream employer.</p>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Job name</th>
            <th>Job title</th>
            <th>Date</th>
          </tr>
        </thead>

        <tbody>
          <% @jobs.each do |job| %>
          <tr>
            <td><%= job.job_name %></td>
            <td><%= link_to(job.job_title, job) %></td>
            <td><%= job.created_at.strftime("%b %d, %Y") %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
